# ============================================
# Laravel Environment Configuration for Docker
# ============================================

APP_NAME=DevTrackLite
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8080

# ============================================
# Application Locale
# ============================================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# ============================================
# Application Maintenance
# ============================================
APP_MAINTENANCE_DRIVER=file

# ============================================
# Logging
# ============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================
# Database Configuration (Docker Services)
# ============================================
# These point to the Docker service names defined in docker-compose.yml
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=devtrack
DB_USERNAME=devtrack
DB_PASSWORD=secret

# ============================================
# Session & Cache
# ============================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=file
CACHE_PREFIX=

# ============================================
# Queue Configuration
# ============================================
QUEUE_CONNECTION=sync

# ============================================
# Broadcasting
# ============================================
BROADCAST_CONNECTION=log

# ============================================
# Filesystem
# ============================================
FILESYSTEM_DISK=local

# ============================================
# Mail Configuration
# ============================================
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# Vite Configuration
# ============================================
# In development, Vite runs on a separate container
# Browser connects to localhost:5173 for HMR
VITE_DEV_SERVER_URL=http://localhost:5173

